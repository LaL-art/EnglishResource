@model IEnumerable<StudyFile>
@{

}

<h2>Manage Files</h2>
<a asp-action="AddFile" asp-controller="StudyFile" class="btn btn-secondary">Add more...</a>
@if (Model?.Count() > 0)
{
    <table class="table table-striped" my-2>
        <tr>
            <th>File Name</th>
            <th>File URL</th>
            <th>Level</th>
            <th>Topic</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.FileName
                </td>
                <td>
                    @item.FileURL
                </td>
                <td>
                    @item.LevelName
                </td>
                <td>
                    @item.TopicName
                </td>
                <td>
                    <a asp-action="UpdateFile" asp-controller="StudyFile" asp-route-id="@item.Id" 
                    class="btn btn-info">Edit</a>
                    <a asp-action="DeleteFile" asp-controller="StudyFile" asp-route-id="@item.Id"
                     class="btn btn-danger" onclick="return window.confirm('Are you sure you want to delete this file?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records available</h3>
}

