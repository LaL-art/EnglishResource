@model IEnumerable<Topic>
@{

}

<h2>Topics</h2>
<a asp-action="AddTopic" asp-controller="Topic" class="btn btn-secondary">Add more...</a>

<table class="table table-striped my-2">
    <tr>
        <th>
            Topic
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td> @item.TopicName</td>
            <td>
                <a asp-action="UpdateTopic" asp-controller="Topic" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-action="DeleteTopic" asp-controller="Topic" asp-route-id="@item.Id" class="btn btn-danger"
                onclick="return window.confirm('Are you sure you want to delete this topic?')">Delete</a>
            </td>
        </tr>
    }
</table>

