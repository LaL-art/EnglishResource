@model IEnumerable<Level>
@{

}

<h2>Levels</h2>
<a asp-action="AddLevel" asp-controller="Level" class="btn btn-secondary">Add more...</a>

<table class="table table-striped my-2">
    <tr>
        <th>
            Level
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.CEFRLevel</td>
            <td>
                <a asp-action="UpdateLevel" asp-controller="Level" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-action="DeleteLevel" asp-controller="Level" asp-route-id="@item.Id" class="btn btn-danger"
                   onclick="return window.confirm('Are you sure you want to delete this level?')">Delete</a>
            </td>
        </tr>
    }
</table>

